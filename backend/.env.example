# Environment variables for the application
# Copy this file to .env and replace the placeholder values with your actual configuration.

# The connection string for your database.
# For local development with SQLite, this is the default.
# For production, use a proper database connection string.
# Example: DATABASE_URL="postgresql://user:password@host:port/database"
DATABASE_URL="file:./dev.db"

# A secret key for signing JWTs. This should be a long, random, and private string.
# You can generate one using a command like: openssl rand -base64 32
JWT_SECRET="YOUR_JWT_SECRET_HERE"

# The port the backend server will run on.
PORT=5000

